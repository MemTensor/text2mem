{
  "name": "项目知识库管理工作流",
  "description": "这个工作流演示了如何创建、标记、查询和归档项目知识",
  "author": "Text2Mem团队",
  "timestamp": "2025-08-27T11:00:00+08:00",
  "steps": [
    {
      "name": "创建项目记忆",
      "ir": {
        "stage": "ENC",
        "op": "Encode",
        "args": {
          "payload": {
            "text": "项目A是一个关于智能记忆系统的研发项目，计划在2025年Q4完成。涉及到NLP、向量检索和记忆检索优化等技术领域。"
          },
          "type": "note",
          "tags": ["项目A", "研发", "计划"],
          "facets": {
            "topic": "项目规划",
            "time": "2025-08-27T00:00:00+08:00"
          },
          "time": "2025-08-27T11:00:00+08:00",
          "priority": "normal",
          "use_embedding": true
        }
      }
    },
    {
      "name": "创建会议记忆",
      "ir": {
        "stage": "ENC",
        "op": "Encode",
        "args": {
          "payload": {
            "text": "项目A启动会议讨论了以下内容：1. 技术路线选择；2. 人员分工；3. 里程碑设定。决定采用向量数据库作为核心存储，9月底完成原型。"
          },
          "type": "event",
          "tags": ["项目A", "会议记录", "启动会议"],
          "facets": {
            "topic": "项目启动",
            "time": "2025-08-27T10:00:00+08:00",
            "location": "会议室A"
          },
          "time": "2025-08-27T11:30:00+08:00",
          "priority": "normal",
          "use_embedding": true
        }
      }
    },
    {
      "name": "添加标签",
      "ir": {
        "stage": "STO",
        "op": "Label",
        "target": {
          "by_tags": ["项目A"]
        },
        "args": {
          "tags": ["Q3计划", "智能记忆系统"],
          "facets": {
            "subject": "研发团队"
          }
        }
      }
    },
    {
      "name": "优先级提升",
      "ir": {
        "stage": "STO",
        "op": "Promote",
        "target": {
          "by_tags": ["项目A", "启动会议"]
        },
        "args": {
          "priority": "high"
        }
      }
    },
    {
      "name": "检索项目记忆",
      "ir": {
        "stage": "RET",
        "op": "Retrieve",
        "args": {
          "query": "项目A 技术路线",
          "k": 5,
          "order_by": "relevance",
          "include": ["id", "text", "tags", "facets", "priority"]
        }
      }
    },
    {
      "name": "总结项目记忆",
      "ir": {
        "stage": "RET",
        "op": "Summarize",
        "target": {
          "by_tags": ["项目A"]
        },
        "args": {
          "focus": "项目状态与计划",
          "max_tokens": 200,
          "method": "abstractive"
        }
      }
    }
  ]
}
